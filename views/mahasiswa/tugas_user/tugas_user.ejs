<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Tugas</title>
        <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
        <link rel="stylesheet" href="/stylesheets/tugasuser.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <nav class="sidebar close">
            <header>
                <div class="image-text">
                    <span class="image">
                        <img src="/images/logo_PENS.png" alt="logo">
                    </span>

                    <div class="text header-text">
                        <span class="name">SiKAP</span>
                        <span class="profession">Presensi Terpadu</span>
                    </div>
                </div>

                <i class='bx bx-chevron-right toggle'></i>
            </header>

            <div class="menu-bar">
                <div class="menu">
                    <li class="search-box">
                            <i class='bx bx-search icon'></i>
                            <input type="search" placeholder="Search...">
                    </li>

                    <ul class="menu-links">
                        <li class="nav-link">
                            <a href="/mahasiswa/beranda">
                                <i class='bx bx-home icon' ></i>
                                <span class="text nav-text">Dashboard</span>
                            </a>
                        </li>
                    </ul>

                    <ul class="menu-links">
                        <li class="nav-link">
                            <a href="/mahasiswa/matakuliah">
                                <i class='bx bx-book-bookmark icon' ></i>
                                <span class="text nav-text">Matakuliah</span>
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="menu-links">
                        <li class="nav-link">
                            <a href="/mahasiswa/jadwal-online">
                                <i class='bx bx-book-content icon' ></i>
                                <span class="text nav-text">Jadwal</span>
                            </a>
                        </li>
                    </ul>

                </div>


                <div class="bottom-content">
                    <div class="hr-horizontal"></div>
                    <li class="">
                        <a href="/logout">
                            <i class='bx bx-log-out icon' ></i>
                            <span class="text nav-text">Logout</span>
                        </a>
                    </li>
                </div>

            </div>
        </nav>

    <!-- NAVBAR -->
        <section class="nav-bar">

            <div class="bar">      
                <section class="head-bar">
                    <div class="image-logo">

                        <div class="texts header-texts">
                            <span class="names">SiKAP</span>
                            <span class="professions">Sistem Kehadiran Perkuliahan</span>
                        </div>

                        <span class="logo"></span>
                            <img src="/images/logo_sikap.png" alt="logo">
                        </span>

                    </div>
                </section>     
            </div>
        </section> 

        <section class="crt">
        
            <div class="kotak">
        
                <div class="profil">
        
                    <div class="gmbr">
                        <span>BDL</span>
                    </div>
        
                    <div class="ktr">
                        <span class="bck"><%= jadwalDetail.nama_jurusan %> Kelas <%= jadwalDetail.nama_kelas %></span>
                        <span class="nme"><%= jadwalDetail.nama_matakuliah %></span>
                        <span class="nrp"><%= jadwalDetail.nama_dosen %></span>
                    </div>
        
                </div>
            
            </div>
        </section>

        <div class="crt1">
            <div class="container-tugas">

                <% for( let i = 0; i < data_tugas.length; i++ ) { %>
                    <div class="card" style="width: 600px;">
                        <div class="card-body card-color">
                            <h5 class="card-title"><%= data_tugas[i].judul_tugas %> </h5>
                            <p class="card-text"><%= data_tugas[i].deskripsi %></p>
                            <p><span class="label">Deadline</span> : <%= data_tugas[i].hari_deadline %>, <%= data_tugas[i].tanggal_deadline %> - <%= data_tugas[i].waktu_deadline %></p>
                            <p><span class="label">Mengumpulkan</span> : <%= data_pengumpulan[i]?.hari_pengumpulan || `` %>, <%= data_pengumpulan[i]?.tanggal_pengumpulan %> - <%= data_pengumpulan[i]?.waktu_pengumpulan %></p>
                            <div style="display: flex; flex-direction: row-reverse;">
                                <a href="/mahasiswa/kuliah/tugas/detail/<%= data_tugas[i].id_tugas %>" class="card-link">Detail Tugas</a>
                            </div>
                        </div>
                    </div>
                <% } %>

            </div>
        </div>
        
    <script src="/javascripts/landing.js"></script>    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>