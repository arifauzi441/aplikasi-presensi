<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>presensi</title>
        <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
        <link rel="stylesheet" href="/stylesheets/ifzal.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <nav class="sidebar close">
            <header>
                <div class="image-text">
                    <span class="image">
                        <img src="/images/logo_hitam.png" alt="logo">
                    </span>

                    <div class="text header-text">
                        <span class="name">SiKAP</span>
                        <span class="profession">Presensi Terpadu</span>
                    </div>
                </div>

                <i class='bx bx-chevron-right toggle'></i>
            </header>

            <div class="menu-bar">
                <div class="menu">
                    <li class="search-box">
                            <i class='bx bx-search icon'></i>
                            <input type="search" placeholder="Search...">
                    </li>

                    <ul class="menu-links">
                        <li class="nav-link">
                            <a href="/dosen/beranda">
                                <i class='bx bx-home icon' ></i>
                                <span class="text nav-text">Dashboard</span>
                            </a>
                        </li>
                    </ul>

                    <ul class="menu-links">
                        <li class="nav-link">
                            <a href="/dosen/matakuliah">
                                <i class='bx bx-book-bookmark icon' ></i>
                                <span class="text nav-text">Matakuliah</span>
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="menu-links">
                        <li class="nav-link">
                            <a href="/dosen/jadwal-online">
                                <i class='bx bx-book-content icon' ></i>
                                <span class="text nav-text">Jadwal</span>
                            </a>
                        </li>
                    </ul>

                </div>


                <div class="bottom-content">
                    <div class="hr-horizontal"></div>
                    <li class="">
                        <a href="/logout">
                            <i class='bx bx-log-out icon' ></i>
                            <span class="text nav-text">Logout</span>
                        </a>
                    </li>
                </div>

            </div>
        </nav>

    <!-- NAVBAR -->
        <section class="nav-bar">

            <div class="bar">      
                <section class="head-bar">
                    <div class="image-logo">

                        <div class="texts header-texts">
                            <span class="names">SiKAP</span>
                            <span class="professions">Sistem Kehadiran Perkuliahan</span>
                        </div>

                        <span class="logo"></span>
                            <img src="/images/logo_sikap.png" alt="logo">
                        </span>

                    </div>
                </section>     
            </div>
        </section> 


        <div class="container-presensi">
            

            <div class="card" style="width: 98%;">
                <div class="card-body card-color">
                    <h5 class="card-title">Peserta Presensi</h5>
                    <div class="search-container">
                        <input type="text" id="searchInput" placeholder="Cari berdasarkan NRP, Nama, atau Jenis Kelamin..." />
                        <div class="info-peserta">
                            <p><span class="label">Total</span> : <%= historyPresensi.length %></p>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">WAKTU</th>
                                <th scope="col">NRP</th>
                                <th scope="col">NAMA</th>
                                <th scope="col">AKSI</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let i = 0; i < historyPresensi.length; i++ ) { %>
                                <tr>
                                    <td><%= presensi.tanggal %> - <%= historyPresensi[i].waktu_presensi %></td>
                                    <td><%= historyPresensi[i].nrp %></td>
                                    <td><%= historyPresensi[i].nama_mahasiswa %></td>
                                    <td>
                                        <a href="/dosen/kuliah/presensi/detail/delete/<%= historyPresensi[i].id_history_presensi %>" class="btn btn-sm btn-danger ">HAPUS</a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/javascripts/landing.js"></script>
    </body>
</html>